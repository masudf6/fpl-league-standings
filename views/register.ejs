<%- include('partials/header') %>
<div class="container mt-5">
  <h1 style="color: aliceblue; font-weight: lighter;">Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="mangerID">FPL ID</label>
              <input type="text" class="form-control" name="managerID" required>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
            <a class="btn btn-dark" href="/" role="button">Home</a>
            <a class="btn btn-dark" href="/login" role="button">Login</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/header') %>